<div class="categories-pages">
  <div class="breadcrumbs">
    <%= link_to "Categorias", categories_path() %> / <%= link_to @category.name ,category_path(@category) %> </a> / <%= link_to " Multimedia", category_gallery_path(@category) %> / <a class="last-it"><%= "#{@albun.name} - #{@albun.date_albun}"  %></a>
  </div>
  <div class="albun-wraper">
    <div class="tit-1">
      <h3>FOTOS</h3>
    </div>
    <div class="photo-galery-container">
      <div id="gallery" data-code="<%= @albun.code %>"></div>
    </div>
     <div class="tit-1">
      <h3>VIDEOS</h3>
    </div>
    <div class="video-galery-container">
    </div>
  </div>
</div>
<script type="text/javascript">
  $(document).ready(function () {
    $("#gallery").nanoGallery({
      kind: 'flickr',
      userID: '126030921@N08',
      photoset: $('#gallery').data('code'),
      thumbnailWidth: 125,
      thumbnailHeight: 125,
      thumbnailGutterWidth: 20,
      thumbnailGutterHeight: 20,
      thumbnailLabel: { display: false }
    });
  });
</script>
